<StackPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.rubyfinal.HelloController" prefHeight="600.0" prefWidth="600.0" stylesheets="@style.css">
    <VBox alignment="CENTER" spacing="50.0">
        <padding>
            <Insets />
        </padding>

        <!-- Menu buttons styled to match the theme -->
        <Button fx:id="solverButton" onAction="#onSolverButtonClicked" text="SOLVER" styleClass="menu-button" />
        <Button fx:id="manualButton" mnemonicParsing="false" onAction="#onManualButtonClicked" text="MANUAL" styleClass="menu-button" />
        <Button fx:id="tutorialButton" mnemonicParsing="false" onAction="#onTutorialButtonClicked" text="TUTORIAL" styleClass="menu-button" />
    </VBox>


</StackPane>
